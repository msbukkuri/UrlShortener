@model UrlShortener.Models.UrlShortenerModel
@{
    ViewBag.Title = "GenerateShortUrl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    GenerateShortUrl</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>UrlShortenerModel</legend>
        <table>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(model => model.FullUrl)
                </td>
                <td class="editor-field">
                    @Html.EditorFor(model => model.FullUrl)
                    @Html.ValidationMessageFor(model => model.FullUrl)
                </td>
            </tr>
        </table>
        <p>
            <input type="submit" value="Generate Short Url" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("View Analytics", "UrlAnalytics")
</div>
